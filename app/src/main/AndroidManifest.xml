<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ea.winterpokalIBC"
    android:versionCode="2006"
    android:versionName="2.1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Because of  sqlite -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- check inet connection -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="de.ea.winterpokalIBC.App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyCompatTheme" >
        <activity
            android:name="de.ea.winterpokalIBC.StartupActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="de.ea.winterpokalIBC.LoginActivity"
            android:label="@string/app_name_login"
            android:noHistory="true" >
        </activity>

        <activity
            android:name="de.ea.winterpokalIBC.MainActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>